<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/fpx1">

    <View
        android:id="@+id/vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:id="@+id/fpxid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="361dp"
        android:hint="Enter User ID"
        android:textAlignment="center"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/fpxlogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpxid"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/vertical"
        android:background="#7C3030"
        android:layout_marginRight="5dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/cancelfpx"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpxid"
        android:layout_toRightOf="@+id/vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#7C3030"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    </RelativeLayout>